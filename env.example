# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (optional - Supabase handles this)
DATABASE_URL=your_postgresql_connection_string

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_SENDER_EMAIL=noreply@yourdomain.com

# Site Configuration
SITE_URL=http://localhost:3000

# Debug Configuration (optional)
# Set to true to enable debug mode with auto-filled connection form
DEBUG_ENV=false

# PDF Rendering Configuration
# Cipher key for encrypting render context tokens (32 bytes / 64 hex characters)
# Generate with: openssl rand -hex 32
APP_CIPHER_KEY=your_64_character_hex_key_here